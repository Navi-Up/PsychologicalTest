<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- 로고/아이콘 영역 -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_brain"
        android:background="@drawable/circle_gradient_background"
        android:padding="24dp"
        android:elevation="8dp" />

    <!-- 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성격 테스트"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:layout_marginBottom="16dp" />

    <!-- 설명 텍스트 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="간단한 질문들을 통해 당신의 성격을 알아보세요!\n재미있고 정확한 결과를 확인해보세요."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp" />

    <!-- 시작 버튼 -->
    <Button
        android:id="@+id/btnCharacterTest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="테스트 시작하기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_primary"
        android:elevation="4dp"
        android:layout_marginHorizontal="32dp" />

</LinearLayout>